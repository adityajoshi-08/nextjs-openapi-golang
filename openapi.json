{
  "openapi": "3.0.0",
  "info": {
    "title": "Next.js API Documentation",
    "version": "1.0.0"
  },
  "paths": {
    "/api/folder_details/{folderID}": {
      "get": {
        "description": "This endpoint fetches metadata such as name and modified time, along with all files (including nested folders) within the provided [folderID]. It returns a success response containing course data structured according to predefined schemas or an error message if any issues arise during execution. The information retrieved from Google Drive is formatted into TypeScript interfaces for type safety.",
        "parameters": [
          {
            "in": "path",
            "name": "folderID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "description": "Response data",
                  "type": "object"
                }
              }
            },
            "description": "Successful response"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Bad request"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Internal server error"
          }
        },
        "summary": "Retrieve details and contents of the specified Google Drive folder."
      }
    },
    "/api/googleDrive/{folderID}": {
      "get": {
        "description": "Fetch only the name for efficiency, without downloading the whole folder or other metadata.",
        "parameters": [
          {
            "in": "path",
            "name": "folderID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "description": "Response data",
                  "type": "object"
                }
              }
            },
            "description": "Successful response"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Bad request"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Internal server error"
          }
        },
        "summary": "Get the name of a specified Google Drive folder"
      }
    }
  }
}